{
    "name": "prooph/event-store-bus-bridge",
    "description": "Marry CQRS with Event Sourcing",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "http://getprooph.org/",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "kontakt@codeliner.ws"
        },
        {
            "name": "Sascha-Oliver Prolic",
            "email": "saschaprolic@googlemail.com"
        }
    ],
    "keywords": [
        "CQRS",
        "EventSourcing",
        "prooph"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
      {
        "name": "prooph/service-bus",
        "type": "github",
        "url": "https://github.com/joemugen/service-bus"
      }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "prooph/common" : "^4.2.1",
        "prooph/service-bus" : "dev-feature/php8",
        "prooph/event-store" : "^7.3.1"
    },
    "require-dev": {
        "psr/container": "^1.0",
        "phpunit/phpunit": "^9.5",
        "phpspec/prophecy": "^1.7",
        "prooph/php-cs-fixer-config": "^0.4",
        "satooshi/php-coveralls": "^1.0",
        "prooph/bookdown-template": "^0.2.3"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.2-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Prooph\\EventStoreBusBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProophTest\\EventStoreBusBridge\\": "tests/",
            "ProophTest\\ServiceBus\\": "vendor/prooph/service-bus/tests/"
        }
    },
    "config": {
        "preferred-install": {
            "prooph/*": "source"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "test": "phpunit"
    }
}
